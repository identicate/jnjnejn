apiVersion: batch/v1
kind: CronJob
metadata:
  name: check-status-cronjob
spec:
  schedule: "*/5 * * * *"  # Run every 5 minutes (adjust as needed)
  jobTemplate:
    spec:
      template:
        spec:
          containers:
          - name: check-status
            image: yourdockerhubusername/check-status-image  # Replace with your image name
            imagePullPolicy: Always
          restartPolicy: OnFailure
